<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/gotham</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_base" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/gotham</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_smaller" parent="text_base">
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>

    <style name="text_small" parent="text_base">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="text_medium" parent="text_base">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="text_normal" parent="text_base">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="text_big" parent="text_base">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="text_title" parent="text_normal">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="text_subtitle" parent="text_medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="text_value_big" parent="text_big">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="text_value_medium" parent="text_medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="text_header" parent="text_big">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
